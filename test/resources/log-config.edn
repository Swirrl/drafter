(let [log-pattern "%d{ISO8601} %-5p %20.20c{1} %7X{method} %30X{route} %12X{user} %12X{jobId} %12X{reqId} :: %m%n"
      max-backups 7
      sparql-log (doto (org.apache.log4j.RollingFileAppender.
                        (org.apache.log4j.EnhancedPatternLayout. log-pattern)
                        "logs/sparql-test.log")
                   (.setMaxBackupIndex max-backups))
      drafter-log (doto (org.apache.log4j.RollingFileAppender.
                         (org.apache.log4j.EnhancedPatternLayout. log-pattern)
                         "logs/drafter-test.log")
                    (.setMaxBackupIndex max-backups))]

  (clj-logging-config.log4j/set-loggers!
       ["org.openrdf" "drafter" "swirrl-server"]
       {:name "drafter"
        :level :debug
        :out drafter-log}

       ["drafter.rdf.sparql-protocol" "drafter.routes.sparql" "drafter.routes.sparql-update"]
       {:name "sparql"
        :level :debug
        :out sparql-log}))
